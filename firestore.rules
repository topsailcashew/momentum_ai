/**
 * @fileOverview Firestore Security Rules for the Amore application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model. Each user has complete control
 * over their own data, and no access to other users' data. All data is nested under
 * the /users/{userId} path, ensuring clear ownership.
 *
 * Data Structure:
 * All personal data (tasks, categories, energy ratings, momentum scores, and streaks)
 * is stored in subcollections under /users/{userId}.
 *
 * Key Security Decisions:
 * - Users can only access their own data, unless they are part of a team and accessing
 *   data within a shared ministry.
 * - There are no admin roles.
 * - Listing all users is disallowed.
 *
 * Denormalization for Authorization:
 * - The userId is denormalized into each document within the /users/{userId} subcollections
 *   to allow direct authorization checks without additional reads.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Ensures that the user is signed in.
     * @returns {boolean} True if the user is signed in, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the request is made by the owner of the resource.
     * @param {string} userId - The user ID to compare with the request's auth UID.
     * @returns {boolean} True if the user ID matches the request's auth UID, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the request is made by the owner of an existing resource.
     * @param {string} userId - The user ID to compare with the request's auth UID.
     * @returns {boolean} True if the user ID matches the request's auth UID and the resource exists, false otherwise.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Helper function to check if user is a member of a team.
     * @param {string} teamId - The ID of the team to check.
     * @returns {boolean} True if the authenticated user is in the team's members list.
     */
    function isTeamMember(teamId) {
      return isSignedIn() && get(/databases/$(database)/documents/teams/$(teamId)).data.members[request.auth.uid] != null;
    }

    /**
     * @description Rules for the pomodoroStates/{userId} collection.
     * @path /pomodoroStates/{userId}
     * @allow (get, create, update, delete) - A user can manage their own pomodoro state document.
     */
    match /pomodoroStates/{userId} {
      allow read, write: if isOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId} collection.
     * @path /users/{userId}
     * @allow (create) - A user can create their own user document if the userId matches their auth UID.
     * @allow (get, update, delete) - A user can read, update, or delete their own user document.
     * @deny (create) - A user cannot create a user document with a userId that does not match their auth UID.
     * @deny (get, update, delete) - A user cannot read, update, or delete another user's document.
     * @principle Enforces document ownership for all operations on user documents.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // Listing all users is not permitted.
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/tasks/{taskId} collection.
     * @path /users/{userId}/tasks/{taskId}
     * @allow (create) - A user can create a task if the userId matches their auth UID and state is valid.
     * @allow (get, list) - A user can read their own tasks, or tasks in a shared ministry.
     * @allow (update) - A user can update their own tasks or tasks assigned to them.
     * @allow (delete) - A user can delete their own tasks.
     * @principle Enforces document ownership and validates state fields for collaboration features.
     */
    match /users/{userId}/tasks/{taskId} {
      // User can read their own tasks OR tasks that belong to a project within a ministry
      // they are a member of. This requires checking the project's ministryId.
      allow get: if isOwner(userId) ||
                   (isSignedIn() && resource.data.projectId != null &&
                    get(/databases/$(database)/documents/users/$(resource.data.userId)/projects/$(resource.data.projectId)).data.ministryId != null &&
                    isTeamMember(get(/databases/$(database)/documents/users/$(resource.data.userId)/projects/$(resource.data.projectId)).data.ministryId)
                   );
      allow list: if isOwner(userId); // Listing remains owner-only for security and performance.
      allow create: if isOwner(userId) &&
        request.resource.data.userId == userId &&
        request.resource.data.state in ['ready', 'in_progress', 'waiting', 'review', 'done'] &&
        request.resource.data.stateHistory is list;
      allow update: if (isOwner(userId) ||
        (isSignedIn() && request.auth.uid == resource.data.assignedTo)) &&
        request.resource.data.userId == resource.data.userId &&
        request.resource.data.state in ['ready', 'in_progress', 'waiting', 'review', 'done'];
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/categories/{categoryId} collection.
     * @path /users/{userId}/categories/{categoryId}
     * @allow (create) - A user can create a category if the userId matches their auth UID.
     * @allow (get, list, update, delete) - A user can read, list, update, or delete their own categories.
     * @principle Enforces document ownership for all operations on category documents.
     */
    match /users/{userId}/categories/{categoryId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/energy-log/{energyLogId} collection.
     * @path /users/{userId}/energy-log/{energyLogId}
     */
    match /users/{userId}/energy-log/{energyLogId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/momentum/{momentumId} collection.
     * @path /users/{userId}/momentum/{momentumId}
     */
    match /users/{userId}/momentum/{momentumId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/streaks/{streakId} collection.
     * @path /users/{userId}/streaks/{streakId}
     * @allow (create) - A user can create a streak if the userId matches their auth UID.
     * @allow (get, list, update, delete) - A user can read, list, update, or delete their own streaks.
     * @principle Enforces document ownership for all operations on streak documents.
     */
    match /users/{userId}/streaks/{streakId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/projects/{projectId} collection.
     * @path /users/{userId}/projects/{projectId}
     * @allow (get, list) - A user can read/list their own projects.
     * @allow (create, update, delete) - A user can manage their own projects.
     * @principle Enforces document ownership for all operations on project documents.
     */
    match /users/{userId}/projects/{projectId} {
      allow get, list: if isOwner(userId) ||
                        (isSignedIn() && resource.data.ministryId != null && isTeamMember(resource.data.ministryId));
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }


    /**
     * @description Rules for the /users/{userId}/reports/{reportId} collection.
     * @path /users/{userId}/reports/{reportId}
     */
    match /users/{userId}/reports/{reportId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isExistingOwner(userId);
        allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/recurring-tasks/{recurringTaskId} collection.
     * @path /users/{userId}/recurring-tasks/{recurringTaskId}
     */
    match /users/{userId}/recurring-tasks/{recurringTaskId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isExistingOwner(userId);
        allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/workday-tasks/{workdayTaskId} collection.
     * @path /users/{userId}/workday-tasks/{workdayTaskId}
     */
    match /users/{userId}/workday-tasks/{workdayTaskId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/ministries/{ministryId} collection.
     * @path /users/{userId}/ministries/{ministryId}
     * @allow (get, list, create, update, delete) - A user can manage their own ministries.
     * @principle Enforces document ownership for all operations on ministry documents.
     */
    match /users/{userId}/ministries/{ministryId} {
        allow get, list: if isOwner(userId) || (isSignedIn() && isTeamMember(ministryId));
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isExistingOwner(userId);
    }


    /**
     * @description Rules for the /users/{userId}/strategic-plans/{planId} collection.
     * @path /users/{userId}/strategic-plans/{planId}
     * @allow (create) - A user can create a strategic plan if the userId matches their auth UID.
     * @allow (get, list, update, delete) - A user can read, list, update, or delete their own strategic plans.
     * @principle Enforces document ownership for all operations on strategic plan documents.
     */
    match /users/{userId}/strategic-plans/{planId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/strategic-goals/{goalId} collection.
     * @path /users/{userId}/strategic-goals/{goalId}
     * @allow (create) - A user can create a strategic goal if the userId matches their auth UID.
     * @allow (get, list, update, delete) - A user can read, list, update, or delete their own strategic goals.
     * @principle Enforces document ownership for all operations on strategic goal documents.
     */
    match /users/{userId}/strategic-goals/{goalId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/strategic-metrics/{metricId} collection.
     * @path /users/{userId}/strategic-metrics/{metricId}
     * @allow (create) - A user can create a strategic metric if the userId matches their auth UID.
     * @allow (get, list, update, delete) - A user can read, list, update, or delete their own strategic metrics.
     * @principle Enforces document ownership for all operations on strategic metric documents.
     */
    match /users/{userId}/strategic-metrics/{metricId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/milestones/{milestoneId} collection.
     * @path /users/{userId}/milestones/{milestoneId}
     * @allow (create) - A user can create a milestone if the userId matches their auth UID.
     * @allow (get, list, update, delete) - A user can read, list, update, or delete their own milestones.
     * @principle Enforces document ownership for all operations on milestone documents.
     */
    match /users/{userId}/milestones/{milestoneId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/notifications/{notificationId} collection.
     * @path /users/{userId}/notifications/{notificationId}
     * @allow (get, list, create, update, delete) - A user can manage their own notifications.
     * @principle Enforces document ownership for all operations on notification documents.
     */
    match /users/{userId}/notifications/{notificationId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId) && request.resource.data.userId == userId;
        allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
        allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/preferences/{docId} collection.
     * @path /users/{userId}/preferences/{docId}
     * @purpose Stores user preferences like morning plan settings, notification preferences, etc.
     * @allow (get, create, update) - User can read and modify their own preferences
     */
    match /users/{userId}/preferences/{docId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isOwner(userId);
        allow delete: if isOwner(userId);
    }

    /**
     * @description Rules for the /users/{userId}/private collection.
     * @path /users/{userId}/private/{docId}
     * @purpose Stores sensitive user data like Google Calendar tokens
     * @security Only accessible by the user owner, never publicly readable
     */
    match /users/{userId}/private/{docId} {
        allow get: if isOwner(userId);
        allow list: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update: if isOwner(userId);
        allow delete: if isOwner(userId);
    }

    /**
     * @description Rules for the /teams/{teamId} collection.
     * @path /teams/{teamId}
     * @allow (read) - Team members can read their team data.
     * @allow (create) - Any authenticated user can create a team.
     * @allow (update) - Only the team creator can update team data.
     * @principle Enables team collaboration while maintaining creator control.
     */
    match /teams/{teamId} {
      allow read: if isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/teams/$(teamId)).data.members;
      allow create: if isSignedIn() && request.resource.data.createdBy == request.auth.uid;
      allow update: if isSignedIn() && resource.data.createdBy == request.auth.uid;
      allow delete: if isSignedIn() && resource.data.createdBy == request.auth.uid;
    }
  }
}

    